{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.RollingFile" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": "1000000",
          "retainedFileCountLimit": 10
        }
      }
    ]
  }
}
